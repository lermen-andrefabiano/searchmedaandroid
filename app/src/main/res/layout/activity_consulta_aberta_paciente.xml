<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConsultaAbertaPacienteActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="10dp"
        android:background="@drawable/style_border_pesquisa">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textMapData"
            android:background="#33b5e5"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="16dp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textMapMedico"
            android:background="#33b5e5"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="16dp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textMapEspecialidade"
            android:background="#33b5e5"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="16dp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textMapStatus"
            android:background="#33b5e5"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="16dp"
            android:padding="5dp"/>

    </LinearLayout>


    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.MapFragment" />

</LinearLayout>