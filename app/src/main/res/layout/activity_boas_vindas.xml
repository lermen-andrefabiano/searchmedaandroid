<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="searchmedapp.BoasVindasActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/textView10"
    style="@style/TabSearhMedTheme">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_boa_vindas"
            android:id="@+id/textView10"
            android:layout_marginBottom="40dp"
            style="@style/TabTextSearhMedTheme"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_boa_vindas_app"
            android:id="@+id/textView12"
            android:layout_marginBottom="40dp"
            style="@style/TabTextSearhMedTheme"
            android:textSize="26dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_boa_vindas_pessoas"
            android:id="@+id/textView11"
            android:layout_gravity="center_horizontal"
            style="@style/TabTextSearhMedTheme"
            android:layout_marginBottom="40dp"
            android:textSize="18dp"
            android:gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_search_white_48dp_2x"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_marginBottom="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_criar_conta"
                android:id="@+id/btnCriarConta"
                android:layout_gravity="center_horizontal"
                android:onClick="criarConta"
                android:textSize="18dp"
                style="@style/ButtonSearhMedTheme"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_ja_sou_cadastrado"
                android:id="@+id/btnJaSouCadastrado"
                android:layout_gravity="center_horizontal"
                android:onClick="jaSouCadastrado"
                android:textSize="18dp"
                style="@style/ButtonSearhMedTheme"/>

        </LinearLayout>


</LinearLayout>


