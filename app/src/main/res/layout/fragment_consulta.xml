<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="searchmedapp.ConsultaFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_encontre_medico"
                android:id="@+id/textLabel_prioridade"
                android:textSize="20dp"
                android:textColor="@color/colorTitle"
                android:paddingLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:gravity="center|left"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:background="@drawable/style_border_pesquisa">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_convenio_medico"
                    android:id="@+id/lbConvenio"
                    android:textSize="16dp"
                    android:background="#33b5e5"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="15dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_especialidades"
                    android:id="@+id/lbEspecialidade"
                    android:textSize="16dp"
                    android:background="#33b5e5"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="15dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_gps"
                    android:id="@+id/lbLocalizacao"
                    android:textSize="16dp"
                    android:background="#33b5e5"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:padding="15dp"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_buscar_medico"
                android:id="@+id/btnEncontreMedico"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                style="@style/ButtonSearhMedTheme"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
