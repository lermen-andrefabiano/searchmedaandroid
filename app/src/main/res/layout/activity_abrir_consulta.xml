<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    style="@style/TabSearhMedTheme">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left">

        <ImageView android:id="@+id/pesquisaImage"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_face_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:textSize="20dp"
            android:id="@+id/textMed1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTitle"
        android:textSize="20dp"
        android:id="@+id/textMed2"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTitle"
        android:textSize="20dp"
        android:id="@+id/textMed3"
        android:paddingLeft="15dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_favorito_add"
        android:id="@+id/btnFavorito"
        android:layout_gravity="center_horizontal"
        style="@style/ButtonSearhMedTheme"
        android:layout_marginTop="20dp"
        android:onClick="favorito"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:background="@drawable/style_border_pesquisa">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Horários Disponíveis"
                android:id="@+id/lbEspecialidade"
                android:textSize="16dp"
                android:background="#33b5e5"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="15dp"/>

            <ListView
                android:id="@+id/listHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#33b5e5"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


